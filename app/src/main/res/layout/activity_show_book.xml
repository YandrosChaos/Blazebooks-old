<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.books.ShowBookActivity">

    <include
        layout="@layout/app_bar_show_book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/container_round_orange_leftbottomtop"
        android:id="@+id/activityShowBook"
        android:padding="10sp">

        <TextView
            android:id="@+id/activityShowBookTvAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Author: "
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/activityShowBookTvAuthorAux"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anonymous"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@id/activityShowBookTvAuthor"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/activityShowBookTvPremiumAux"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/premium"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/activityShowBookTvGenreAux"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TERROR"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activityShowBookTvPremiumAux" />
        <TextView
            android:id="@+id/activityShowBookTvSynopsis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Synopsis"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activityShowBookTvAuthor" />
        <TextView
            android:id="@+id/activityShowBookTvSynopsisAux"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/synopsis_example"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activityShowBookTvSynopsis" />
        <Button
            android:id="@+id/activityShowBookBtnRead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_margin="30sp"
            android:text="Read"
            app:layout_constraintTop_toBottomOf="@id/activityShowBookTvSynopsisAux"
            android:background="@drawable/container_round_orange"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activityShowBookChapters"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>