<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/fragmentBooksNew"
            android:layout_width="match_parent"
            android:layout_height="250dp"

            android:background="@drawable/container_box_blue"
            android:text="@string/new_books"

            android:textSize="40sp"/>

        <Button
            android:id="@+id/fragmentBooksGenres"
            android:layout_width="match_parent"
            android:layout_height="250dp"

            android:background="@drawable/container_box_orange"
            android:text="@string/genres"

            android:textSize="40sp"/>

        <Button
            android:id="@+id/fragmentBooksAuthors"
            android:layout_width="match_parent"
            android:layout_height="250dp"

            android:background="@drawable/container_box_blue"
            android:text="@string/authors"

            android:textSize="40sp"/>

        <Button
            android:id="@+id/fragmentBooksIb"
            android:layout_width="match_parent"
            android:layout_height="250dp"

            android:background="@drawable/container_box_orange"
            android:text="@string/interactive_books"

            android:textSize="40sp"/>

        <Button
            android:id="@+id/fragmentBooksAll"
            android:layout_width="match_parent"
            android:layout_height="250dp"

            android:background="@drawable/container_box_blue"
            android:text="@string/all_books"

            android:textSize="40sp"/>

    </LinearLayout>
</ScrollView>