<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5sp"
    android:background="@drawable/container_round_blue"
    android:orientation="vertical"
    android:padding="20dp"
    android:id="@+id/bookSearchItemCl">

    <TextView
        android:id="@+id/activitySearchBookName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Book Title"
        android:textColor="@android:color/white"
        android:textSize="40sp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/activitySearchBookGenre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Genre: "
        android:textColor="@android:color/white"
        android:textSize="20sp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activitySearchBookName" />

    <TextView
        android:id="@+id/activitySearchBookGenreAux"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Fucking Hell"
        android:textColor="@android:color/white"
        android:textSize="20sp"

        app:layout_constraintStart_toEndOf="@+id/activitySearchBookGenre"
        app:layout_constraintTop_toBottomOf="@+id/activitySearchBookName" />

    <TextView
        android:id="@+id/activitySearchBookPremium"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:text="PREMIUM"
        android:textColor="@android:color/white"
        android:textSize="20sp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activitySearchBookGenre" />


</androidx.constraintlayout.widget.ConstraintLayout>